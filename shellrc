# add .dotrc/bin to the path
export PATH=$PATH:"$(dirname ${BASH_SOURCE[0]})/bin"

# set history size
HISTSIZE=20000
HISTFILESIZE=20000

# run source shellrc
function srcrc() {
    # if shell is bash
    if [ -n "$BASH_VERSION" ]; then
        source ~/.bashrc
    # if shell is zsh
    elif [ -n "$ZSH_VERSION" ]; then
        source ~/.zshrc
    fi
}
