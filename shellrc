
# cf. https://askubuntu.com/questions/113544/how-can-i-reduce-the-file-size-of-a-scanned-pdf-file
function pdfcomp() {
  gs -sDEVICE=pdfwrite -dCompatibilityLevel=1.4 -dPDFSETTINGS=/printer \
  -dNOPAUSE -dQUIET -dBATCH -sOutputFile=$2 $1
}

function allps2pdf() {
  find . -name '*.ps' | sed 's/.ps//' | xargs -I {} ps2pdf {}.ps {}.pdf
}

function allpdfseparate() {
  find . -name '*.pdf' -and -not -name '*_separated.pdf' | sed 's/.pdf//' | xargs -I {} pdfseparate {}.pdf {}_%d_separated.pdf
}
